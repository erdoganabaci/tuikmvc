@model IEnumerable<Tuik>

@foreach (var tuik in Model)
{
    <div class="card mb-3">
        <div class="row no-gutter">
            <div class="col-md-3">
                <img src="~/img/@tuik.ImageUrl" alt="@tuik.Description" class="card-img">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@tuik.Id">@tuik.Name</a>
                    </h5> @*//home/details/2*@
                <p class="card-text">
                    @if (tuik.ShortDescription == "")
                    {
                    <div class="alert alert-danger" role="alert">
                        No Data Found!
                    </div>
                    }
                    else
                    {
                        @tuik.ShortDescription
                    }

                </p>
                    <p class="card-text">
                        <small class="text-muted">3 days ago</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
}

